---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TaxGiraffe - Affordable & Fast Tax Services Australia</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
        .hero-bg {
            background-color: #F3F4F6; /* A light grey for a professional feel */
        }
        .brand-text {
            color: #4F46E5; /* A nice indigo for branding */
        }
        .brand-bg {
            background-color: #4F46E5;
        }
        .brand-bg:hover {
            background-color: #4338CA;
        }
    </style>
</head>
<body class="bg-white text-gray-800">

    <!-- Header & Navigation -->
    <header class="bg-white shadow-sm sticky top-0 z-50">
        <nav class="container mx-auto px-6 py-4 flex justify-between items-center">
            <a href="#" class="text-2xl font-bold brand-text">
                TaxGiraffe
            </a>
            <div class="hidden md:flex items-center space-x-6">
                <a href="#home" class="text-gray-600 hover:brand-text transition">Home</a>
                <a href="#services" class="text-gray-600 hover:brand-text transition">Services</a>
                <a href="#why-us" class="text-gray-600 hover:brand-text transition">About Us</a>
                <a href="#contact" class="text-gray-600 hover:brand-text transition">Contact Us</a>
            </div>
            <a href="#" class="hidden md:block px-5 py-2.5 text-white font-medium rounded-lg text-sm brand-bg transition">
                Client Portal
            </a>
            <!-- Mobile Menu Button -->
            <button id="mobile-menu-button" class="md:hidden">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path></svg>
            </button>
        </nav>
        <!-- Mobile Menu -->
        <div id="mobile-menu" class="hidden md:hidden px-6 pb-4">
            <a href="#home" class="block py-2 text-gray-600 hover:brand-text transition">Home</a>
            <a href="#services" class="block py-2 text-gray-600 hover:brand-text transition">Services</a>
            <a href="#why-us" class="block py-2 text-gray-600 hover:brand-text transition">About Us</a>
            <a href="#contact" class="block py-2 text-gray-600 hover:brand-text transition">Contact Us</a>
            <a href="#" class="block mt-2 px-5 py-2.5 text-white font-medium rounded-lg text-sm brand-bg transition text-center">
                Client Portal
            </a>
        </div>
    </header>

    <main>
        <!-- Hero Section -->
        <section id="home" class="hero-bg py-20 md:py-32">
            <div class="container mx-auto px-6 text-center">
                <h1 class="text-4xl md:text-6xl font-bold text-gray-900 leading-tight">Stress-Free Tax Services for Australia</h1>
                <p class="mt-4 text-lg md:text-xl text-gray-600 max-w-3xl mx-auto">Affordable, fast, and reliable tax solutions. Let TaxGiraffe help you navigate the complexities of Australian tax.</p>
                <div class="mt-8 flex justify-center space-x-4">
                    <a href="#contact" class="px-8 py-4 text-white font-bold rounded-lg brand-bg transition">Get a Free Quote</a>
                    <a href="#services" class="px-8 py-4 text-gray-800 font-bold rounded-lg bg-white border border-gray-300 hover:bg-gray-50 transition">Our Services</a>
                </div>
            </div>
        </section>

        <!-- Services Section -->
        <section id="services" class="py-20">
            <div class="container mx-auto px-6">
                <div class="text-center mb-12">
                    <h2 class="text-3xl md:text-4xl font-bold">Our Services</h2>
                    <p class="mt-2 text-gray-600">Comprehensive tax and accounting services tailored for you.</p>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                    <!-- Service Card 1 -->
                    <div class="bg-gray-50 p-8 rounded-lg shadow-md hover:shadow-xl transition-shadow">
                        <h3 class="text-xl font-bold brand-text mb-2">Individual Tax Returns</h3>
                        <p class="text-gray-600">Maximise your refund with our expert preparation and fast lodgment.</p>
                    </div>
                    <!-- Service Card 2 -->
                    <div class="bg-gray-50 p-8 rounded-lg shadow-md hover:shadow-xl transition-shadow">
                        <h3 class="text-xl font-bold brand-text mb-2">BAS/IAS Lodgment</h3>
                        <p class="text-gray-600">Timely and accurate Business Activity Statement services for sole traders and small businesses.</p>
                    </div>
                    <!-- Service Card 3 -->
                    <div class="bg-gray-50 p-8 rounded-lg shadow-md hover:shadow-xl transition-shadow">
                        <h3 class="text-xl font-bold brand-text mb-2">Small Business Tax</h3>
                        <p class="text-gray-600">Comprehensive tax planning and compliance for your growing business.</p>
                    </div>
                    <!-- Service Card 4 -->
                    <div class="bg-gray-50 p-8 rounded-lg shadow-md hover:shadow-xl transition-shadow">
                        <h3 class="text-xl font-bold brand-text mb-2">Bookkeeping</h3>
                        <p class="text-gray-600">Keep your finances in order with our professional bookkeeping services.</p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Why Choose Us Section -->
        <section id="why-us" class="py-20 bg-gray-50">
            <div class="container mx-auto px-6">
                <div class="text-center mb-12">
                    <h2 class="text-3xl md:text-4xl font-bold">Why Choose TaxGiraffe?</h2>
                    <p class="mt-2 text-gray-600">We stand tall above the rest.</p>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 text-center">
                    <!-- Feature 1 -->
                    <div>
                        <div class="flex items-center justify-center h-16 w-16 rounded-full brand-bg text-white mx-auto mb-4">
                            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v.01"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M12 6h.01M6 12h.01M18 12h.01M6 18h.01M18 6h.01M6 6h.01M18 18h.01"></path></svg>
                        </div>
                        <h3 class="text-xl font-bold mb-2">Affordable</h3>
                        <p class="text-gray-600">Transparent pricing with no hidden fees.</p>
                    </div>
                    <!-- Feature 2 -->
                    <div>
                        <div class="flex items-center justify-center h-16 w-16 rounded-full brand-bg text-white mx-auto mb-4">
                            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>
                        </div>
                        <h3 class="text-xl font-bold mb-2">Fast & Efficient</h3>
                        <p class="text-gray-600">Quick turnaround times to get your tax matters sorted sooner.</p>
                    </div>
                    <!-- Feature 3 -->
                    <div>
                        <div class="flex items-center justify-center h-16 w-16 rounded-full brand-bg text-white mx-auto mb-4">
                            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path></svg>
                        </div>
                        <h3 class="text-xl font-bold mb-2">Expert Advice</h3>
                        <p class="text-gray-600">Registered tax agents dedicated to your financial success.</p>
                    </div>
                    <!-- Feature 4 -->
                    <div>
                        <div class="flex items-center justify-center h-16 w-16 rounded-full brand-bg text-white mx-auto mb-4">
                           <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path></svg>
                        </div>
                        <h3 class="text-xl font-bold mb-2">Responsive Service</h3>
                        <p class="text-gray-600">We're here to answer your questions and provide support.</p>
                    </div>
                </div>
            </div>
        </section>

        <!-- CTA Section / Contact Form -->
        <section id="contact" class="py-20">
            <div class="container mx-auto px-6">
                <div class="bg-white rounded-lg shadow-xl p-8 md:p-12 lg:flex lg:items-center lg:justify-between">
                    <div class="lg:w-1/2">
                        <h2 class="text-3xl font-bold text-gray-900">Ready to take control of your taxes?</h2>
                        <p class="mt-2 text-lg text-gray-600">Send us a message and we'll get back to you with a free, no-obligation quote.</p>
                    </div>
                    <div class="mt-8 lg:mt-0 lg:w-1/2">
                        <form action="#" method="POST" class="space-y-4">
                            <div>
                                <label for="name" class="sr-only">Name</label>
                                <input type="text" name="name" id="name" class="w-full px-4 py-3 rounded-lg border-gray-300 focus:ring-indigo-500 focus:border-indigo-500" placeholder="Your Name" required>
                            </div>
                             <div>
                                <label for="email" class="sr-only">Email</label>
                                <input type="email" name="email" id="email" class="w-full px-4 py-3 rounded-lg border-gray-300 focus:ring-indigo-500 focus:border-indigo-500" placeholder="Your Email" required>
                            </div>
                             <div>
                                <label for="message" class="sr-only">Message</label>
                                <textarea name="message" id="message" rows="4" class="w-full px-4 py-3 rounded-lg border-gray-300 focus:ring-indigo-500 focus:border-indigo-500" placeholder="How can we help?" required></textarea>
                            </div>
                            <div>
                                <button type="submit" class="w-full px-6 py-3 text-white font-bold rounded-lg brand-bg transition">Send Message</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white">
        <div class="container mx-auto px-6 py-8">
            <div class="flex flex-col md:flex-row justify-between items-center">
                <div class="text-center md:text-left mb-4 md:mb-0">
                    <p class="text-lg font-semibold">TaxGiraffe</p>
                    <p class="text-sm text-gray-400">Your Trusted Tax Partner</p>
                </div>
                <div class="flex space-x-6">
                    <a href="#" class="text-gray-400 hover:text-white">Privacy Policy</a>
                    <a href="#" class="text-gray-400 hover:text-white">Terms of Service</a>
                </div>
            </div>
            <div class="mt-8 border-t border-gray-700 pt-6 text-center text-sm text-gray-400">
                <p>&copy; 2025 TaxGiraffe. All Rights Reserved. ABN: XX XXX XXX XXX</p>
            </div>
        </div>
    </footer>

    <script>
        // JavaScript for mobile menu toggle
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');

        mobileMenuButton.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
        });
    </script>

</body>
</html>

